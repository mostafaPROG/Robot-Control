<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity" android:background="#EB02F0D4">

    <TextView
            android:text="مصطفی قربانزاده\t\t\tمهندسی کامپیوتر"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.551"
            android:fontFamily="@font/yekan" android:textColor="#000000" android:layout_marginTop="16dp"
            android:textSize="18sp"/>
    <TextView
            android:text="محمد اکرمی\t\t\tمهندسی برق"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:fontFamily="@font/yekan" android:textColor="#000000" android:layout_marginTop="8dp"
            android:textSize="18sp"/>
    <ImageView
            android:layout_width="409dp"
            android:layout_height="258dp" app:srcCompat="@drawable/ggg"
            android:id="@+id/imageSplash" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="پروژه کنترل ربات Mentor با موبایل"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleSplash" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageSplash" app:layout_constraintStart_toStartOf="@+id/imageSplash"
            app:layout_constraintEnd_toEndOf="@+id/imageSplash" android:layout_marginEnd="8dp" android:textSize="24sp"
            android:textColor="#FFFFFF" android:fontFamily="@font/yekan"
            android:background="@drawable/background_title" android:padding="10dp"/>
    <TextView
            android:text="درس رباتیک"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleSplash" app:layout_constraintStart_toStartOf="@+id/titleSplash"
            app:layout_constraintEnd_toEndOf="@+id/titleSplash" android:fontFamily="@font/yekan"
            android:textColor="@android:color/black" android:textSize="18sp"/>
    <TextView
            android:text="استاد درس     آقای خراشادیزاده"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView6" android:textColor="#000000"
            android:fontFamily="@font/yekan" android:layout_marginTop="16dp" android:textSize="18sp"/>
    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:indeterminate="true"
            app:mpb_progressStyle="circular"
            android:background="@android:color/transparent"
            app:mpb_progressTint="@color/yellow"
            app:mpb_indeterminateTint="@color/yellow"
            app:mpb_progressBackgroundTint="@android:color/white"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>