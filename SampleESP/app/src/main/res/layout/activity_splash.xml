<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity" android:background="@drawable/p10">

    <TextView
            android:text="مصطفی قربانزاده\t\t\tمهندسی کامپیوتر"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.551"
            android:fontFamily="@font/yekan" android:textColor="#01579B"
            android:layout_marginTop="16dp"
            android:textSize="18sp" android:visibility="gone"/>
    <TextView
            android:text="محمد اکرمی\t\t\tمهندسی برق"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:fontFamily="@font/yekan" android:textColor="#01579B" android:layout_marginTop="8dp"
            android:textSize="18sp" android:visibility="gone"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/ggg"
            android:id="@+id/imageSplash" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="1" android:scaleType="fitXY" android:padding="8dp"
            android:layout_marginTop="100dp"/>
    <TextView
            android:text="کنترل ربات منتور\nبا موبایل"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleSplash"
            android:textSize="24sp"
            android:textColor="@color/yellow" android:fontFamily="@font/yekan"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageSplash"
            app:layout_constraintBottom_toBottomOf="@+id/imageSplash"
            app:layout_constraintEnd_toStartOf="@+id/imageSplash" app:layout_constraintHorizontal_bias="0"/>
    <TextView
            android:text="درس رباتیک"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleSplash" app:layout_constraintStart_toStartOf="@+id/titleSplash"
            app:layout_constraintEnd_toEndOf="@+id/titleSplash" android:fontFamily="@font/yekan"
            android:textColor="#01579B" android:textSize="18sp" android:visibility="gone"/>
    <TextView
            android:text="استاد درس     آقای خراشادیزاده"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView6" android:textColor="#01579B"
            android:fontFamily="@font/yekan" android:layout_marginTop="16dp" android:textSize="18sp"
            android:visibility="gone"/>
    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminate="true"
            app:mpb_progressStyle="circular"
            android:background="@android:color/transparent"
            app:mpb_progressTint="@color/yellow"
            app:mpb_indeterminateTint="@color/yellow"
            app:mpb_progressBackgroundTint="@android:color/white"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>